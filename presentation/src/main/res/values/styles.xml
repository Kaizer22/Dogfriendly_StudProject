<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Invitation Activity RadioGroup-->
    <style name="InvitationRadioGroup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/invitation_activity_elements_unchecked</item>
        <item name="colorControlActivated">@color/invitation_activity_elements</item>
    </style>

    <!-- Invitation Activity SeekBar-->
    <style name="invitationSeekBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/invitation_activity_elements</item>
        <item name="android:colorControlNormal">@color/invitation_activity_elements_unchecked</item>
    </style>

</resources>
